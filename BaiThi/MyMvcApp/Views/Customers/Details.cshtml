@model ComicSystem.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Full Name:</dt>
        <dd>@Model.FullName</dd>
        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>
        <dt>Registration Date:</dt>
        <dd>@Model.RegistrationDate.ToShortDateString()</dd>
    </dl>

    <a href="@Url.Action("Index", "Customers")" class="btn btn-secondary">Back to List</a>
</div>
