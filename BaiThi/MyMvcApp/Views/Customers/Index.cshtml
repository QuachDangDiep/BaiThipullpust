@model IEnumerable<ComicSystem.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<h2>Customers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Phone Number</th>
            <th>Registration Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.RegistrationDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Details", "Customers", new { id = customer.CustomerID })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Register", "Customers")" class="btn btn-primary">Register New Customer</a>

