@model IEnumerable<ComicSystem.Models.ComicBook>

@{
    ViewData["Title"] = "Comic Books List";
}

<h2>Comic Books</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price Per Day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comicBook in Model)
        {
            <tr>
                <td>@comicBook.Title</td>
                <td>@comicBook.Author</td>
                <td>@comicBook.PricePerDay</td>
                <td>
                    <a href="@Url.Action("EditComicBook", new { id = comicBook.ComicBookID })">Edit</a> |
                    <a href="@Url.Action("DeleteComicBook", new { id = comicBook.ComicBookID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreateComicBook")" class="btn btn-primary">Add New Comic Book</a>
