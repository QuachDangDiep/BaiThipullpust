@model ComicSystem.Models.ComicBook

@{
    ViewData["Title"] = "Delete Comic Book";
}

<h2>Delete Comic Book</h2>

<div>
    <h3>Are you sure you want to delete this comic book?</h3>
    <dl class="dl-horizontal">
        <dt>Title:</dt>
        <dd>@Model.Title</dd>
        <dt>Author:</dt>
        <dd>@Model.Author</dd>
        <dt>Price Per Day:</dt>
        <dd>@Model.PricePerDay</dd>
    </dl>

    <!-- Form for deleting the comic book -->
    <form asp-action="DeleteComicBook" method="post">
        <input type="hidden" asp-for="ComicBookID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
